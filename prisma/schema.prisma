generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  email     String?  @unique
  username  String?
  role      Role?     @default(customer)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products  Product[]
  orders    Order[]
}

enum Role {
  customer
  seller
  admin
}

model Product {
  id          String   @id @default(uuid())
  title       String
  description String
  imageUrl    String
  price       Int
  discount    Int
  createdAt   DateTime @default(now())

  userId      String
  user        User     @relation(fields: [userId], references: [id])
  order      Order[]  
}


model Order {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  productId String
  product   Product  @relation(fields: [productId], references: [id])

  quantity  Int
  price     Int   

  city      String
  state     String
  pincode   Int
  createdAt DateTime @default(now())
}

